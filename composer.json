{
    "name": "dive-be/nova-froala-field",
    "description": "A Laravel Nova Froala WYSIWYG Editor Field.",
    "license": "MIT",
    "keywords": [
        "laravel",
        "nova",
        "field",
        "wysiwyg",
        "froala",
        "editor"
    ],
    "authors": [
        {
            "name": "DIVE bv",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/dive-be/nova-froala-field",
    "require": {
        "php": "^8.2",
        "laravel/nova": "^4.12",
        "league/flysystem": "^3.0",
        "nova-kit/nova-packages-tool": "^1.11",
        "spatie/image-optimizer": "^1.7"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/larastan": "^2.0",
        "orchestra/testbench": "^8.0",
        "phpunit/phpunit": "^10.0"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://nova.laravel.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Froala\\Nova\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "FroalaServiceProvider"
            ]
        }
    },
    "scripts": {
        "format": "@php ./vendor/bin/pint",
        "larastan": "@php ./vendor/bin/phpstan analyse --memory-limit=2G",
        "test": "@php ./vendor/bin/phpunit",
        "verify": [
            "@larastan",
            "@test"
        ]
    }
}
